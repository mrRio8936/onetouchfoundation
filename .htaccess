# Enable RewriteEngine
RewriteEngine On

# Set the base directory (optional, adjust if needed)
RewriteBase /

# Ensure index.html is served on all requests (important for SPA routing)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]

# Redirect non-www to www (optional)
RewriteCond %{HTTP_HOST} ^onetouchfoundation\.com [NC]
RewriteRule ^(.*)$ https://onetouchfoundation.com/$1 [L,R=301]

# Force HTTPS (optional)
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Cache headers (optional for performance)
# Set caching for common file types (optional)
<FilesMatch "\.(jpg|jpeg|png|gif|css|js|ico|woff|woff2|ttf|svg)$">
    Header set Cache-Control "max-age=2592000, public"
</FilesMatch>

# Disable directory browsing (optional)
Options -Indexes
